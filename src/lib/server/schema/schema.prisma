generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

model User {
  id           String     @id
  name         String
  passwordHash String
  Session      Session[]
  Document     Document[]
}

model Session {
  id         String   @id
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  expiresAt  DateTime
  persistent Boolean
}

model EditableLang {
  id            String
  lang          String
  value         String
  DocumentTag   DocumentTag? @relation(fields: [DocumentTagId], references: [id])
  DocumentTagId String?

  @@id([id, lang])
}

model Document {
  id                    String                  @id @default(uuid())
  title                 String                  @default("Default Title")
  authorId              String
  author                User                    @relation(fields: [authorId], references: [id])
  visibility            Int                     @default(-1)
  DocumentTagOnDocument DocumentTagOnDocument[]
}

model DocumentTag {
  id                    String                  @id
  lang                  EditableLang[]
  DocumentTagOnDocument DocumentTagOnDocument[]
}

model DocumentTagOnDocument {
  id Int @id @default(autoincrement())

  Document   Document @relation(fields: [DocumentId], references: [id])
  DocumentId String

  tag           DocumentTag @relation(fields: [DocumentTagId], references: [id])
  DocumentTagId String
}
